<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item
                android:bottom="-1dp"
                android:left="-5dp"
                android:right="-5dp"
                android:top="-5dp">
                <shape android:shape="rectangle" android:tint="@color/notice_button_background">
                    <stroke
                        android:width="3dp"
                        android:color="@color/notice_button_background" />
                    <corners
                        android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
